<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/add_clothes"
    tools:context="com.example.jungoh.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button

            android:id="@+id/open_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/navigation">

        </Button>

        <ImageView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:src = "@drawable/title"
            />

        <LinearLayout
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_weight="1"
            android:layout_below="@+id/main_title"
            android:orientation="vertical"
            android:background="@drawable/main_back">


            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:text="----.--.--. --:--:--"
                android:textStyle = "bold"
                android:textSize = "25dp"
                android:gravity="center">
            </TextView>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/main_point"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="30dp"
                    android:id="@+id/place"
                    android:layout_below="@+id/date"
                    android:gravity="center"
                    android:text="Dong-jak, Sang-do 1dong"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>
                <Button
                    android:layout_marginRight="10dp"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:id="@+id/re"
                    android:background="@drawable/reset"
                    android:layout_gravity="right" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/what_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize ="20dp"
                    android:textStyle="bold"
                    android:id="@+id/weather1_time"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize ="20dp"
                    android:textStyle="bold"
                    android:id="@+id/weather2_time"/>

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize ="20dp"
                    android:textStyle="bold"
                    android:id="@+id/weather3_time"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/weather4_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/what_weather"
                android:layout_below="@id/what_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_below="@id/weather1_time"
                    android:id="@+id/weather1"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/sunny" />

                <ImageView
                    android:layout_below="@id/weather2_time"
                    android:id="@+id/weather2"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/cloudy"/>

                <ImageView
                    android:layout_below="@id/weather3_time"
                    android:id="@+id/weather3"
                    android:layout_width="90dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:src="@drawable/rainy"/>

                <ImageView
                    android:id="@+id/weather4"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:layout_below="@id/weather4_time"
                    android:src="@drawable/thunder" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/what_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/temp1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="-ยบ"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/temp2"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="-ยบ"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/temp3"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="-ยบ"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/temp4"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="-ยบ"
                    android:textSize="20dp"
                    android:textStyle="bold"/>


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/cloud_weather"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="-1dp"
            android:src="@drawable/cloud"
            android:layout_below="@id/time"/>

        <Button
            android:id="@+id/left_btn"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="400dp"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/toleft" />

        <Button
            android:id="@+id/right_btn"
            android:layout_alignParentRight="true"
            android:layout_marginTop="400dp"
            android:layout_marginRight="20dp"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/toright" />



        <ImageView
            android:id="@+id/temperature_back"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:src="@drawable/feel_like_temperature"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/cloud_weather"
            android:layout_alignBottom="@id/cloud_weather"
            android:layout_marginBottom="70dp"/>


        <TextView
            android:id="@+id/feels_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="feels_like"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/temperature_back"
            android:layout_alignTop="@+id/temperature_back"
            android:layout_alignRight="@+id/temperature_back"
            android:layout_alignLeft="@id/temperature_back"
            android:gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:layout_alignTop="@id/cloud_weather"
            android:layout_alignBottom="@id/cloud_weather"
            android:layout_marginBottom="70dp">

            <TextView
                android:id="@+id/max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="highest : "/>
            <TextView
                android:id="@+id/min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lowest : "
                android:layout_marginLeft="30dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/symbol_name"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_alignTop="@id/cloud_weather"
            android:layout_alignBottom="@id/cloud_weather"
            android:layout_marginBottom="45dp"
            android:gravity="center|bottom"
            android:text="Click Button" />

        <TextView
            android:id="@+id/today_text"
            android:layout_below="@id/cloud_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Today's OOTD"
            android:textStyle="bold"
            android:layout_centerHorizontal="true">
        </TextView>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/today_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/setting"
            android:id="@+id/setting"/>



        <FrameLayout
            android:layout_below="@id/today_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:scaleType="fitEnd"
                android:src="@drawable/login_field" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/clothes_title">

                <TextView
                    android:id="@+id/outer_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_below="@id/today_text"
                    android:text="Outer"/>

                <TextView
                    android:id="@+id/top_text"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_below="@id/today_text"
                    android:text="Top"/>

                <TextView
                    android:id="@+id/bottom_text"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_below="@id/today_text"
                    android:text="Bottom"/>

                <TextView
                    android:id="@+id/accessary_text"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_below="@id/today_text"
                    android:text="Accessary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/clothes_title">



                <ImageView
                    android:id="@+id/img_outer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                </ImageView>
                <ImageView
                    android:id="@+id/img_top"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                </ImageView>
                <ImageView
                    android:id="@+id/img_bottom"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                </ImageView>

                <ImageView
                    android:id="@+id/img_accessary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                </ImageView>

            </LinearLayout>



        </FrameLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFF8DC"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/delete_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete My Account"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:background="#00ff0000"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/logout"/>

            <Button
                android:id="@+id/logout"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:text="Log out"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/title"/>

            <ImageView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/title"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>